<div id="post" class="post">
  <div class="post-header">
    <h1><%= @post.title %></h1>
  </div>
  <div class="post-body">
    <p><%= @post.body %></p>
  </div>
  <div class="post-comments">
    <% @comments.each do |c| %>
      <div class="post-comment-header">
        <h4><%= c.name %></h4>
      </div>
      <div class="post-comment-body">
        <p><%= c.body %></p>
      </div>
    <% end %>
  </div>
</div>
